{
  "private": true,
  "name": "valibot-benchmarks",
  "type": "module",
  "scripts": {
    "build": "rm -rf ./dist && mkdir dist && ./node_modules/.bin/tsx ./src/build.ts && cp src/main.html dist/index.html",
    "bench": "npm run build && NODE_ENV=production ./node_modules/.bin/tsx src/runner.ts",
    "bench:nodejs": "mkdir -p results && NODE_ENV=production node ./src/runners/nodejs.js results/nodejs.json",
    "bench:deno": "mkdir -p results && deno run --no-npm --allow-write=./results/deno.json ./src/runners/nodejs.js ./results/deno.json",
    "bench:bun": "mkdir -p results && bun ./src/runners/nodejs.js ./results/bun.json",
    "experimental:profile": "NODE_ENV=production ./node_modules/.bin/0x --output-dir=0x ./src/runners/nodejs.js",
    "experimental:debugger": "NODE_ENV=production node --inspect-brk ./src/runners/nodejs.js",
    "experimental:hono": "NODE_ENV=production ./node_modules/.bin/tsx ./src/hono.ts",
    "experimental:browser": "./node_modules/.bin/tsx ./src/runners/browser.ts 3000",
    "next:dev": "./node_modules/.bin/next",
    "next:build": "./node_modules/.bin/next build",
    "lint": "npm run lint:format",
    "lint:knip": "./node_modules/.bin/knip",
    "lint:type": "./node_modules/.bin/tsc",
    "lint:format": "./node_modules/.bin/prettier --check .",
    "lint:format:fix": "./node_modules/.bin/prettier --write ."
  },
  "dependencies": {
    "@babel/preset-typescript": "7.22.5",
    "@hono/node-server": "1.1.1",
    "@types/node": "20.4.9",
    "0x": "5.6.0",
    "babel-loader": "9.1.3",
    "eslint": "8.46.0",
    "hono": "3.4.1",
    "next": "13.4.13",
    "playwright": "1.36.2",
    "quickjs-emscripten": "0.23.0",
    "terser": "5.19.2",
    "tsx": "3.12.7",
    "typescript": "5.1.6",
    "valibot": "0.11.1",
    "vitest": "0.34.1",
    "webpack": "5.88.2",
    "webpack-cli": "5.1.4",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@types/react": "18.2.19",
    "autoprefixer": "10.4.14",
    "knip": "2.19.1",
    "postcss": "8.4.27",
    "prettier": "3.0.1",
    "tailwindcss": "3.3.3"
  }
}
